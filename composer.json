{
    "name": "lean-book-tools/manuscript-generator",
    "autoload": {
        "psr-4": {
            "ManuscriptGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ManuscriptGenerator\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "symfony/finder": "^5.4",
        "symfony/process": "^5.4",
        "symfony/console": "^5.4",
        "symplify/console-color-diff": "^10.0",
        "parsica-php/parsica": "@dev",
        "beberlei/assert": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.2",
        "symplify/easy-coding-standard": "^10.0",
        "symplify/coding-standard": "^10.0",
        "rector/rector": "^0.12",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/extension-installer": "^1.1"
    },
    "bin": ["bin/generate-manuscript"],
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "vendor/bin/phpstan"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
